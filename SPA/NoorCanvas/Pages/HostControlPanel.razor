            };
            // NOTE: Removed inline-arabic pattern and headers - only content assets get SHARE buttons

            // Collect all potential injection points first
            var allMatches = new List<(int position, string assetType, string elementPreview)>();
            
            foreach (var pattern in containerPatterns)
            {
                var assetType = pattern.Key;
                var regex = new System.Text.RegularExpressions.Regex(pattern.Value, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
                var matches = regex.Matches(html);

                Logger.LogInformation("ASSET-INJECTION-DEBUG: Processing '{AssetType}' - found {MatchCount} container matches", 
                    assetType, matches.Count);

                foreach (System.Text.RegularExpressions.Match match in matches)
                {
                    var elementPreview = match.Value.Length > 100 ? match.Value.Substring(0, 100) + "..." : match.Value;
                    allMatches.Add((match.Index, assetType, elementPreview));
                    
                    Logger.LogInformation("ASSET-INJECTION-DEBUG: Found {AssetType} container at position {Position} - Preview: {Preview}",
                        assetType, match.Index, elementPreview);
                }
            }

            // Filter out nested matches - only keep outermost containers
            var filteredMatches = FilterOutNestedMatches(allMatches, html);
            Logger.LogInformation("ASSET-INJECTION-DEBUG: After filtering nested matches: {FilteredCount} of {TotalCount} matches kept",
                filteredMatches.Count, allMatches.Count);

            // Generate injection points for filtered matches only
            var injectionPoints = new List<(int position, string buttonHtml, string assetType, string elementPreview)>();
            int totalAssetsFound = 0;

            foreach (var (position, assetType, elementPreview) in filteredMatches)
            {
                totalAssetsFound++;
