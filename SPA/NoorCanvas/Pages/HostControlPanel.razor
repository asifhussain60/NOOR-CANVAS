            else if (hostToken == "79ESAWLD")
            {
                Logger.LogInformation("HOST-TOKEN-MAPPING: Using hardcoded mapping for 79ESAWLD -> 212");
                return "212"; // KSESSIONS session ID
            }
            
            Logger.LogWarning("HOST-TOKEN-MAPPING: No mapping found for token: {Token}", hostToken);
            return null;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to map host token {Token} to session ID", hostToken);
