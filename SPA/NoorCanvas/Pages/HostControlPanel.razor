    private async Task<string?> GetSessionIdFromTokenAsync(string hostToken)
    {
        try
        {
            // ISSUE-120: Map host token to session ID using the SecureTokens API
            using var httpClient = HttpClientFactory.CreateClient("default");
            
            // Query the SecureTokens table to find the session ID for this host token
            var tokenValidationResponse = await httpClient.GetAsync($"/api/host/token/{hostToken}/validate");
            
            if (tokenValidationResponse.IsSuccessStatusCode)
            {
                var responseJson = await tokenValidationResponse.Content.ReadAsStringAsync();
                var result = System.Text.Json.JsonSerializer.Deserialize<JsonElement>(responseJson);
                
                // Try different possible response formats - prioritize KSessionsId (KSESSIONS ID 212) over Canvas ID
                if (result.TryGetProperty("session", out var sessionElement))
                {
                    // Check for KSessionsId in session object (case-sensitive)
                    if (sessionElement.TryGetProperty("KSessionsId", out var kSessionsIdElement) &&
                        kSessionsIdElement.ValueKind != JsonValueKind.Null)
                    {
                        Logger.LogInformation("HOST-TOKEN-MAPPING: Found KSessionsId in session object: {KSessionsId}", kSessionsIdElement.GetInt64());
                        return kSessionsIdElement.GetInt64().ToString();
                    }
                    // Also try lowercase variant
                    else if (sessionElement.TryGetProperty("kSessionsId", out var kSessionsIdLowerElement) &&
                             kSessionsIdLowerElement.ValueKind != JsonValueKind.Null)
                    {
                        Logger.LogInformation("HOST-TOKEN-MAPPING: Found kSessionsId (lowercase) in session object: {KSessionsId}", kSessionsIdLowerElement.GetInt64());
                        return kSessionsIdLowerElement.GetInt64().ToString();
                    }
                }
                
                // Check for KSessionsId at root level
                if (result.TryGetProperty("KSessionsId", out var rootKSessionsIdElement))
                {
                    Logger.LogInformation("HOST-TOKEN-MAPPING: Found KSessionsId at root: {KSessionsId}", rootKSessionsIdElement.GetInt64());
                    return rootKSessionsIdElement.GetInt64().ToString();
                }
                else if (result.TryGetProperty("ksessionsId", out var ksessionsIdElement))
                {
                    Logger.LogInformation("HOST-TOKEN-MAPPING: Found ksessionsId at root: {KSessionsId}", ksessionsIdElement.GetInt64());
                    return ksessionsIdElement.GetInt64().ToString();
                }
                
                // Fallback to Canvas session IDs
                if (result.TryGetProperty("sessionId", out var sessionIdElement))
                {
                    Logger.LogWarning("HOST-TOKEN-MAPPING: Using Canvas sessionId as fallback: {SessionId}", sessionIdElement.GetInt32());
                    return sessionIdElement.GetInt32().ToString();
                }
                else if (result.TryGetProperty("canvasSessionId", out var canvasSessionIdElement))
                {
                    Logger.LogWarning("HOST-TOKEN-MAPPING: Using canvasSessionId as fallback: {CanvasSessionId}", canvasSessionIdElement.GetInt32());
                    return canvasSessionIdElement.GetInt32().ToString();
                }
            }
            
            // Fallback: Use hardcoded mapping for known tokens (temporary)
            if (hostToken == "BIIVCFDY")
            {
                Logger.LogInformation("HOST-TOKEN-MAPPING: Using hardcoded mapping for BIIVCFDY -> 212");
                return "212"; // KSESSIONS session ID for session 212
