        var tagEndIndex = openingTag.IndexOf('>');
        if (tagEndIndex == -1) return openingTag;

        var attributeToInsert = $" data-asset-id=\"{assetId}\"";
        return openingTag.Insert(tagEndIndex, attributeToInsert);
