    /// <summary>
    /// Filters out nested asset matches to ensure only outermost containers get SHARE buttons
    /// </summary>
    private List<(int position, string assetType, string elementPreview)> FilterOutNestedMatches(
        List<(int position, string assetType, string elementPreview)> allMatches, string html)
    {
        var filteredMatches = new List<(int position, string assetType, string elementPreview)>();
        
        // Sort matches by position
        var sortedMatches = allMatches.OrderBy(m => m.position).ToList();
        
        foreach (var currentMatch in sortedMatches)
        {
            bool isNested = false;
            
            // Check if this match is nested inside any other match that comes before it
            foreach (var otherMatch in sortedMatches)
            {
                if (otherMatch.position >= currentMatch.position) break; // Only check matches that start before current
                
                // Find the end of the other match's container
                int otherStartPos = otherMatch.position;
                int searchStart = otherStartPos;
                
                // Find the opening tag end
                int openTagEnd = html.IndexOf('>', searchStart);
                if (openTagEnd == -1) continue;
                
                // Find the matching closing tag for this container
                string tagName = ExtractTagName(html.Substring(otherStartPos, openTagEnd - otherStartPos + 1));
                if (string.IsNullOrEmpty(tagName)) continue;
                
                int closingTagPos = FindMatchingClosingTag(html, openTagEnd + 1, tagName);
                if (closingTagPos == -1) continue;
                
                // Check if current match is inside the other match's container
                if (currentMatch.position > otherStartPos && currentMatch.position < closingTagPos)
                {
                    Logger.LogInformation("NESTED-FILTER: Filtered out nested {CurrentType} at {CurrentPos} (inside {OtherType} at {OtherPos})",
                        currentMatch.assetType, currentMatch.position, otherMatch.assetType, otherMatch.position);
                    isNested = true;
                    break;
                }
            }
            
            if (!isNested)
            {
                filteredMatches.Add(currentMatch);
            }
        }
        
        return filteredMatches;
    }

    private string ExtractTagName(string openingTag)
    {
        try
        {
            // Extract tag name from opening tag like "<div class='...'>" -> "div"
            var match = System.Text.RegularExpressions.Regex.Match(openingTag, @"<(\w+)");
            return match.Success ? match.Groups[1].Value : "";
        }
        catch
        {
            return "";
        }
    }

    private int FindMatchingClosingTag(string html, int startPos, string tagName)
    {
        try
        {
            int depth = 1;
            int pos = startPos;
            
            while (pos < html.Length && depth > 0)
            {
                int nextTag = html.IndexOf('<', pos);
                if (nextTag == -1) break;
                
                // Check if it's a closing tag for our target
                if (html.Substring(nextTag).StartsWith($"</{tagName}>"))
                {
                    depth--;
                    if (depth == 0) return nextTag;
                    pos = nextTag + tagName.Length + 3; // Skip past </tagName>
                }
                // Check if it's an opening tag of the same type (nested)
                else if (html.Substring(nextTag).StartsWith($"<{tagName}"))
                {
                    depth++;
                    pos = nextTag + 1;
                }
                else
                {
                    pos = nextTag + 1;
                }
            }
            
            return -1; // No matching closing tag found
        }
        catch
        {
            return -1;
        }
    }
}

