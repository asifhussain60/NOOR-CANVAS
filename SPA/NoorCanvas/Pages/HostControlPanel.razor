";
                
                injectionPoints.Add((position, shareButtonHtml, assetType, elementPreview));
                
                Logger.LogInformation("ASSET-INJECTION-DEBUG: Created injection point #{Count} for {AssetType} at position {Position} - Asset ID: {AssetId}",
                    totalAssetsFound, assetType, position, assetId);
            }

            // Sort injection points by position in descending order (inject from end to beginning to maintain positions)
            injectionPoints.Sort((a, b) => b.position.CompareTo(a.position));
            
            Logger.LogInformation("ASSET-INJECTION-DEBUG: Total unique asset containers found: {TotalAssets}", totalAssetsFound);
            Logger.LogInformation("ASSET-INJECTION-DEBUG: Injection points to process: {InjectionPoints}", injectionPoints.Count);

            // Inject buttons in reverse order to maintain correct positions
            string result = html;
            int actualInjections = 0;
            
            foreach (var (position, buttonHtml, assetType, elementPreview) in injectionPoints)
