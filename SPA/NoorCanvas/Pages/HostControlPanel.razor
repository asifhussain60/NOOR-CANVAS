            box-shadow: 0 10px 25px -5px rgba(16, 185, 129, 0.4); 
            z-index: 9999; 
            opacity: 0; 
            transform: translateX(100%); 
            transition: all 0.3s ease;
            font-family: 'Inter', sans-serif;
            max-width: 400px;
        `;
        
        document.body.appendChild(toast);
        
        // Show toast
        setTimeout(() => {
            toast.style.opacity = '1';
            toast.style.transform = 'translateX(0)';
        }, 100);
        
        // Hide toast after 3 seconds
        setTimeout(() => {
            toast.style.opacity = '0';
            toast.style.transform = 'translateX(100%)';
            setTimeout(() => document.body.removeChild(toast), 300);
        }, 3000);
    };

    // User Registration Link Copy Function
    async function copyUserLink() {
        try {
            const userLinkElement = document.getElementById('userLinkInput');
            if (userLinkElement) {
                await navigator.clipboard.writeText(userLinkElement.value);
                
                // Show success feedback
                const button = event.target;
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fa-solid fa-check"></i> Copied!';
                button.style.backgroundColor = '#059669';
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.style.backgroundColor = '#3B82F6';
                }, 2000);
            }
        } catch (err) {
            console.error('Failed to copy user link:', err);
            alert('Failed to copy link. Please copy manually.');
        }
    }
</script>

