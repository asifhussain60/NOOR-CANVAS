    private async Task InitializeSignalRAsync()
    {
        try
        {
            // Dispose existing connection if any
            if (hubConnection != null)
            {
                Logger.LogInformation("[DEBUG-WORKITEM:hostcanvas:CANVAS]  Disposing existing SignalR connection");
                Logger.LogInformation("[DEBUG-WORKITEM:hostcanvas:CANVAS] Disposing existing SignalR connection");
