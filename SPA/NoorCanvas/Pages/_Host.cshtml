@page "/"
@namespace NoorCanvas.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NoorCanvas</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="NoorCanvas.styles.css" rel="stylesheet" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/noor-logging.js"></script>
    <script>
        // Initialize NOOR Canvas browser logging
        if (window.NoorLogger) {
            NoorLogger.info('NOOR-INIT', 'NOOR Canvas application loaded', {
                blazorMode: 'ServerPrerendered',
                environment: '@(Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Production")'
            });
            
            // Enhanced Blazor connection monitoring
            Blazor.start({
                configureSignalR: function(builder) {
                    NoorLogger.debug('BLAZOR-SIGNALR', 'Configuring SignalR connection');
                    return builder;
                }
            }).then(function() {
                NoorLogger.info('BLAZOR-STARTUP', 'Blazor server connection established');
            }).catch(function(error) {
                NoorLogger.error('BLAZOR-STARTUP', 'Failed to establish Blazor connection', error);
            });
        }
    </script>
</body>
</html>
