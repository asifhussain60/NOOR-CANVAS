{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/SPA/NoorCanvas/NoorCanvas.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false,
				"close": true
			}
		},
		{
			"label": "build-protected",
			"dependsOrder": "sequence",
			"dependsOn": [
				"validate-issue-67-protection",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "validate-issue-67-protection",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/.guards/Issue-67-Protection.ps1",
				"-Mode",
				"validate",
				"-StrictMode"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "validate-issue-80-protection",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/.guards/Issue-80-Protection.ps1",
				"-Mode",
				"validate",
				"-StrictMode"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "test-guard-system",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/.guards/test-guard-system.ps1"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "build-with-tests",
			"dependsOrder": "sequence",
			"dependsOn": [
				"build",
				"run-post-build-tests"
			]
		},
		{
			"label": "run-post-build-tests",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/.hooks/run-post-build.ps1",
				"-Configuration",
				"Debug"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true
			},
			"problemMatcher": []
		},
		{
			"label": "build-host-provisioner",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Tools/HostProvisioner/HostProvisioner/HostProvisioner.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Tools/HostProvisioner/HostProvisioner/HostProvisioner.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/Tools/HostProvisioner/HostProvisioner/HostProvisioner.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run-host-provisioner-session-215",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--",
				"create",
				"--session-id",
				"215",
				"--created-by",
				"GitHub Copilot Test",
				"--dry-run",
				"false"
			],
			"options": {
				"cwd": "${workspaceFolder}/Tools/HostProvisioner/HostProvisioner"
			},
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "build-with-iiskill",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/build-with-iiskill.ps1"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run-with-iiskill",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/run-with-iiskill.ps1"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "dotnet",
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building.*",
					"endsPattern": "^.*Application started.*|^.*Now listening on.*"
				}
			}
		},
		{
			"label": "test-session-title-fix",
			"type": "shell",
			"command": "npx",
			"args": [
				"playwright",
				"test",
				"Tests/UI/issue-108-session-name-display-fix.spec.ts",
				"--headed"
			],
			"group": "test"
		},
		{
			"label": "run-noorcanvas",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "run-noorcanvas-app",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "run-app-with-cd",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-Command",
				"cd 'd:\\PROJECTS\\NOOR CANVAS\\SPA\\NoorCanvas'; dotnet run"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "start-noor-canvas",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}