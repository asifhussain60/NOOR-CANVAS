{
  "name": "noor-canvas",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:host": "playwright test host-authentication.spec.ts",
    "test:cascading": "playwright test cascading-dropdowns.spec.ts",
    "test:user": "playwright test user-authentication.spec.ts",
    "test:api": "playwright test api-integration.spec.ts",
    "test:auth-flow": "playwright test Tests/UI/host-authentication-flow-e2e.spec.ts --headed",
    "test:session-opener": "playwright test Tests/UI/session-opener-user-auth-flow.spec.ts --headed",
    "test:simplified-auth": "playwright test Tests/UI/host-authentication-flow-e2e.spec.ts Tests/UI/session-opener-user-auth-flow.spec.ts --headed",
    "test:auth-flow-debug": "playwright test Tests/UI/host-authentication-flow-e2e.spec.ts --debug",
    "test:session-opener-debug": "playwright test Tests/UI/session-opener-user-auth-flow.spec.ts --debug",
    "test:auth-config": "playwright test --config=Tests/playwright-auth.config.ts",
    "test:auth-config-headed": "playwright test --config=Tests/playwright-auth.config.ts --headed",
    "test:auth-config-debug": "playwright test --config=Tests/playwright-auth.config.ts --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen https://localhost:9091",
    "test:ui-mode": "playwright test --ui",
    "test:trace": "playwright show-trace",
    "test:typescript": "playwright test --config=playwright.config.ts",
    "test:copilot-demo": "playwright codegen --target=typescript https://localhost:9091",
    "build:tests": "tsc --noEmit",
    "lint:tests": "eslint Tests/**/*.ts --fix"
  },
  "repository": {
    "type": "git",
